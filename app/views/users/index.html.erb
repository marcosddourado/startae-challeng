<div class="bg">
  <div id="retangle"></div>
</div>

<p id="notice"><%= notice %></p>

<div class="header">
  <div class="starte_logo"></div>
</div>

<div class="convocation">
  <h1 class="tittle">Meet our team</h1>
  <p>We are a group of multi-skilled individuals who are entrepeneurial by nature</p>
  <p>and live to make digital products and services that people love to use.</p>
</div>

<div class="latest_tweets">
  <div> <%= render :partial => 'svg/logo_twitter' %> </div>
  <div id="text"> Latest tweets</div>
</div>
<div class="cards_container">
  <% @users.each do |user| %>
      <div class="card">
        <div class="avatar">
          <%= image_tag(user.twitter_id + ".jpg", :alt => "Avatar", :size => "250x250") %>
        </div>
        <div class="informations">
          <p id="name"> <%= user.name %> </p>
          <p id="twitter_account">@<%= user.twitter_id %></p>
          <p id="job_tittle"><b><%= user.job_tittle %></b></p>
          <p id="last_tweet">"<%= user.last_tweet %>"</p>
        </div>
      </div>
  <% end %>
</div>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Job tittle</th>
    <th>Last tweet</th>
    <th>Twitter</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

  <% @users.each do |user| %>-->
      <tr>
        <td><%= user.name %></td>
        <td><%= user.job_tittle %></td>
        <td><%= user.last_tweet %></td>
        <td><%= user.twitter_id %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>

  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
